{
    "name":"Duotone",
    "widgetVersion": 2,
    "thumbnail":"images/the-edge-thumbnail.png",
    "templateType":"standard",
    "pageTypes": [ "home", "404" ],
    "screenshot":"images/the-edge-screenshot.jpg",
     "images":[
        "images/gallery/gallery-image--1.jpg",
        "images/gallery/gallery-image--2.jpg",
        "images/gallery/gallery-image--3.jpg",
        "images/gallery/gallery-image--4.jpg",
        "images/gallery/gallery-image--5.jpg",
        "images/gallery/gallery-image--6.jpg",
        "images/gallery/gallery-image--7.jpg",
        "images/gallery/gallery-image--8.jpg",
        "images/gallery/gallery-image--9.jpg"
    ],
    "colorSwatches":
    {
        "Swatch 1": {
            "color1":"#ff3b68",
            "color2":"#26324f",
            "color3":"#03273b",
            "color4":"#03273b",
            "color5":"#283a51",
            "color6":"#3d4c61",
            "color7":"#ffffff"
        }
    },
    "fontSwatch": {
       "title": "Futura / Playfair Display",
        "font1": {
            "font-family": "\"Futura\", Helvetica, Arial, sans-serif",
            "font-size": "50px",
            "font-weight": "900",
            "line-height": "24px",
            "letter-spacing": "-0.3px",
            "color": "@color-swatch5"
        },
        "font2": {
            "font-family": "\"Futura\", Helvetica, Arial, sans-serif",
            "font-size": "36px",
            "font-weight": "900",
            "line-height": "24px",
            "letter-spacing": "-0.3px",
            "color": "@color-swatch5"
        },
        "font3": {
            "font-family": "\"Futura\", Helvetica, Arial, sans-serif",
            "font-size": "26px",
            "font-weight": "900",
            "line-height": "24px",
            "letter-spacing": "-0.3px",
            "color": "@color-swatch5"
        },
        "font4": {
            "font-family": "\"Futura\", Helvetica, Arial, sans-serif",
            "font-size": "18px",
            "font-weight": "400",
            "line-height": "24px",
            "letter-spacing": "1px",
            "color": "@color-swatch5"
        },
        "font5": {
            "font-family": "\"Playfair Display\", Palatino, Georgia, serif",
            "font-size": "18px",
            "font-weight": "400",
            "line-height": "24px",
            "letter-spacing": "0px",
            "color": "@color-swatch4"
        }
    },
    "styles": {
        "colors": {
            "color__primary": "@color-swatch1",
            "color__secondary": "@color-swatch2",
            "color__tertiary": "@color-swatch3"
			
        },
        "site": {
            "color__body--background": "@color-swatch7",
            "color__container--background": "fade(@font-swatch5-color, 10%)",
            "color__link--text": "@color__primary",
            "font__companyname--font-family": "@font-swatch1-font-family",
            "font__companyname--font-size": "26px",
            "font__companyname--font-weight": "400",
            "font__companyname--line-height": "unit(24px*0.05, em)",
            "font__companyname--letter-spacing": "unit(1px/10, em)",
            "color__companyname--text": "@color__body--background"
        },
        "typography": {
            "font__h1--font-family": "@font-swatch1-font-family",
            "font__h1--font-size": "@font-swatch1-font-size",
            "font__h1--font-weight": "@font-swatch1-font-weight",
            "font__h1--line-height": "unit(@font-swatch1-line-height*0.05, em)",
            "font__h1--letter-spacing": "unit(@font-swatch1-letter-spacing/10, em)",
            "color__h1--text": "@font-swatch1-color",
            "font__h2--font-family": "@font-swatch2-font-family",
            "font__h2--font-size": "@font-swatch2-font-size",
            "font__h2--font-weight": "@font-swatch2-font-weight",
            "font__h2--line-height": "unit(@font-swatch2-line-height*0.05, em)",
            "font__h2--letter-spacing": "unit(@font-swatch2-letter-spacing/10, em)",
            "color__h2--text": "@font-swatch2-color",
            "font__h3--font-family": "@font-swatch3-font-family",
            "font__h3--font-size": "@font-swatch3-font-size",
            "font__h3--font-weight": "@font-swatch3-font-weight",
            "font__h3--line-height": "unit(@font-swatch3-line-height*0.05, em)",
            "font__h3--letter-spacing": "unit(@font-swatch3-letter-spacing/10, em)",
            "color__h3--text": "@font-swatch3-color",
            "font__h4--font-family": "@font-swatch4-font-family",
            "font__h4--font-size": "@font-swatch4-font-size",
            "font__h4--font-weight": "@font-swatch4-font-weight",
            "font__h4--line-height": "unit(@font-swatch4-line-height*0.06, em)",
            "font__h4--letter-spacing": "unit(@font-swatch4-letter-spacing/10, em)",
            "color__h4--text": "@font-swatch4-color",
            "font__p--font-family": "@font-swatch5-font-family",
            "font__p--font-size": "@font-swatch5-font-size",
            "font__p--font-weight": "@font-swatch5-font-weight",
            "font__p--line-height": "unit(@font-swatch5-line-height*0.075, em)",
            "font__p--letter-spacing": "unit(@font-swatch5-letter-spacing/10, em)",
            "color__p--text": "@font-swatch5-color"
        },
		"header": {
			"color__header--background": "@color__primary",
			"color__header--border": "@color__primary"
		},
		"footer": {
			"color__footer--background": "@color__primary",
			"color__footer--border": "@color__secondary"
		},
        "navigation": {
            "font__navigation--font-family": "@font-swatch4-font-family",
            "font__navigation--font-size": "14px",
            "font__navigation--font-weight": "700",
            "font__navigation--line-height": "@font-swatch4-line-height",
            "font__navigation--letter-spacing": "unit(1px/10, em)",
            "color__navigation--text": "@color-swatch7",
            "color__navigation--text--hover": "@color__secondary",
            "color__navigation--text--selected": "@color__secondary",
			"color__navigation-list--background": "@color__secondary",
			"color__navigation-item--text": "@color__body--background",
            "color__navigation-item--text--hover": "@color__primary",
            "color__navigation-item--text--selected": "@color__primary"
        },
        "button": {
            "color__button--background": "@color__secondary",
            "color__button--background--hover": "darken(@color__button--background, 4%)",
            "color__button--text": "@color-swatch7",
            "color__button--text--hover": "@color-swatch7",
            "color__button--border": "@color-swatch4",
            "font__button--font-family": "@font-swatch4-font-family",
            "font__button--font-size": "14px",
            "font__button--font-weight": "700",
            "font__button--line-height": "@font-swatch4-line-height",
            "font__button--letter-spacing": "unit(1.5px/10, em)"
        },
        "form": {
            "color__form--background": "@color__container--background"
        },
        "image": {
            "color__image--background": "@color__container--background",
			"color__image-title--text": "@color__h3--text",
			"color__image-description--text": "@color__p--text"
		},
        "gallery": {
            "color__gallery--background": "@color__container--background",
            "color__gallery-caption--background": "@color__secondary",
            "color__gallery-title--text": "@color-swatch7",
            "color__gallery-description--text": "fade(@color-swatch7, 80%)"
        },
        "slideshow": {
            "color__slideshow--background": "@color__container--background",
            "color__slideshow-caption--background": "@color__secondary",
            "color__slideshow-title--text": "@color-swatch7",
            "color__slideshow-description--text": "fade(@color-swatch7, 80%)",
            "color__slideshow-pagination-item--background": "@color__secondary",
            "color__slideshow-pagination-item--text": "@color-swatch7",
            "color__slideshow-pagination-item--text--selected": "@color__primary"
        },
        "feature": {
            "color__feature-content--background": "#26292f",
            "font__feature-headline--font-family": "@font-swatch8-font-family",
            "font__feature-headline--font-size": "72px",
            "font__feature-headline--font-weight": "700",
            "font__feature-headline--line-height": "72px",
            "font__feature-headline--letter-spacing": "6px",
            "color__feature-headline--text": "@color__body--background",
            "font__feature-strapline--font-family": "@font-swatch5-font-family",
            "font__feature-strapline--font-size": "16px",
            "font__feature-strapline--font-weight": "400",
            "font__feature-strapline--line-height": "34px",
            "font__feature-strapline--letter-spacing": "@font-swatch5-letter-spacing",
            "color__feature-strapline--text": "#bebebe",
            "color__feature-button--border": "fade(@color__body--background, 10%)",
            "color__feature-button--background": "transparent",
            "color__feature-button--background--hover": "fade(@color__body--background, 4%)",
            "color__feature-button--text": "@color__body--background"
        },
		"twitter": {
			"color__twitter--background": "@color__container--background",
			"color__twitter-item--background": "@color__body--background"
		},
        "blog": {
			"color__blogsearch--background": "@color__form--background",
			"color__blogpostlist--background": "@color__body--background",
            "color__blogpostlist-article--background": "fade(@font-swatch5-color, 10%)",
            "color__blogpostlist-title--background": "@color-swatch7",
            "color__blogpost-title--text": "@color__h2--text",
            "color__blogpost-article--background": "@color__primary",
            "color__blogpostlist-title--text": "@color__blogpost-title--text"
        },
        "ecommerce": {
            "color__ecomproductslist-filters--background": "@color__container--background",
            "color__ecomproductslist-product-title--text": "@color__h3--text",
            "color__ecomproduct-title--text": "@color__h2--text",
            "color__ecomproduct-price--text": "@color__p--text"
        },
        "menu": {
            "color__menusections--background": "@color__secondary",
            "color__menu--background": "@color__container--background",
            "color__menu-section-header--background": "@color__secondary",
            "color__menu-section-featured--background": "@color__secondary"
        }
    }
}
